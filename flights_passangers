class Flight:

    counter = 1

    def __init__(self, origin, destination, duration):

          # Keep track of id number.
          self.id = Flight.counter
          Flight.counter += 1
          #print('\nself.id **', self.id)

          # Keep track of passengers.
          self.passengers = []

          # Details about flight.
          self.origin = origin
          self.destination = destination
          self.duration = duration
    def print_info(self):
          print('\nself.id ', self.id)
          print(f"Flight origin: {self.origin}")
          print(f"Flight destination: {self.destination}")
          print(f"Flight duration: {self.duration}")

          print()
          print("Passengers:")
          for passenger in self.passengers:
              print(f"Passenger name is {passenger.name}, flight ID is {passenger.flight_id}")

    def add_passenger(self, p):
          self.passengers.append(p)
          p.flight_id = self.id

def delay(self, amount):
      self.duration += amount

class Passenger:
    def __init__(self, name):
        self.name = name

def main():
# Create flight.
    f1 = Flight(origin="New York", destination="Paris", duration=540)
    f2 = Flight(origin="Tel-Aviv", destination="MOSCOW", duration=320)
    # Create passengers.
    alice = Passenger(name="Alice")
    bob = Passenger(name="Bob")
    galym = Passenger(name="Galym")

    # Add passengers.
    f1.add_passenger(alice)
    f1.add_passenger(bob)
    f2.add_passenger(galym)

    f1.print_info()
    f2.print_info()

main()
